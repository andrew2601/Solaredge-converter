<h1>Solaredge Calculator</h1>

<p>Please enter information below:</p>

<%= form_for(@query) do |f| %>

  <div class="field">
    <%= f.label :kWh_rate, "kWh Rate" %>
    <%= f.text_field :kwh_rate %>
  </div>

  <div class="field">
    <%= f.label :kWh_credit, "kWh Credit" %>
    <%= f.text_field :kwh_credit %>
  </div>

  <div class="field">
    <%= f.label :kwh_generated, "kWh Generated" %>
    <%= f.text_field :kwh_generated %>
  </div>

  <div class="field">
    <%= f.label :sent_to_grid, "Sent To Grid" %>
    <%= f.text_field :sent_to_grid %>
  </div>

  <div class="field">
    <%= f.label :distribution_charge, "Distribution Charge" %>
    <%= f.text_field :distribution_charge %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>

<% if @queries.nil? %>
  <p> Sorry, no queries to display! </p>
<% else %>
  <% @queries.each do |query| %>
    <ol>
      <li>kWh Generated: <%= query.kwh_generated %></li>
      <li>Consumed: <%= query.consumed %></li>
      <li>Savings Consumed: <%= query.savings_consumed %></li>
      <li>Sent to Grid: <%= query.sent_to_grid %></li>
      <li>Credit Grid: <%= query.credit_grid %></li>
      <li>Savings Before Distribution: <%= query.savings_before_distribution %></li>
      <li>Distribution Charge: <%= query.distribution_charge %></li>
      <li>Total Savings: <%= query.total_savings %></li>
    </ol>
  <% end %>
<% end %>
